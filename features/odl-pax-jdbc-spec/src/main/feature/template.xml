<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.6.0" name="odl-pax-jdbc-spec">
    <feature name="odl-pax-jdbc-spec" description="Provides OSGi JDBC Service spec">
        <bundle dependency="true">mvn:org.osgi/org.osgi.service.jdbc/{{versionAsInProject}}</bundle>
        <!-- it should be Karaf that installs "transaction-api" feature, that's why these bundles have dependency="true" -->
        <bundle dependency="true">mvn:javax.transaction/javax.transaction-api/{{versionAsInProject}}</bundle>
        <bundle dependency="true">mvn:javax.interceptor/javax.interceptor-api/{{versionAsInProject}}</bundle>
        <bundle dependency="true">mvn:org.apache.servicemix.bundles/org.apache.servicemix.bundles.javax-inject/{{versionAsInProject}}</bundle>
        <bundle dependency="true">mvn:jakarta.el/jakarta.el-api/{{versionAsInProject}}</bundle>
        <bundle dependency="true">mvn:javax.enterprise/cdi-api/{{versionAsInProject}}</bundle>
    </feature>
</features>
